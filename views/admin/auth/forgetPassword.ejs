<!--------- Registration area Start --------->
<section class="registration__area">
    <div class="container">
        <div class="registration__form" id="signup">
            <form action="/admin/forget-password" method="post">
                <br>
                <h2 class="heading">Forget password</h2>

                <% if(typeof error !=="undefined" ){ %>
                    <%error.forEach(errors=>{%>

                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <p>
                                <%= errors.msg %>
                            </p>

                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>

                        <% }) %>
                            <% } %>

                                <% if(typeof passReset !=="undefined" ){ %>
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <%= passReset %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                aria-label="Close"></button>

                                    </div>
                                    <% } %>

                                        <div class="row">




                                            <div class="col-sm-12">
                                                <div class="form__input">
                                                    <input type="email" class="form-control" placeholder="Email Address"
                                                        name="email" />
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form__submit pt-1">
                                                    <button class="common-btn w-100" type="submit">
                                                        Submit
                                                    </button>
                                                </div>
                                            </div>


            </form>


        </div>
    </div>
    </div>
    <!-- </div> -->

</section>
<!--------- Registration area End --------->