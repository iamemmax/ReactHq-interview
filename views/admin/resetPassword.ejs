<!--------- Update Password area Start --------->
<section class="registration__area">
    <div class="container">
        <div class="registration__form" id="signup">
            <form action="/admin/reset-password/<%=id %>?_method=PUT" method="post">

                <% if(typeof error !=="undefined" ){ %>
                    <%error.forEach(errors=>{%>

                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <p>
                                <%= errors.msg %>
                            </p>

                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>

                        <% }) %>
                            <% } %>
                                <div class="row">




                                    <div class="col-sm-12">
                                        <div class="form__input">
                                            <input type="password" class="form-control" placeholder="New Password"
                                                name="password" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form__input">
                                            <input type="password" class="form-control" placeholder="Confirm Password"
                                                name="password2" />
                                        </div>
                                    </div>





                                </div>
        </div>
        <div class="col-12">
            <div class="form__submit pt-1">
                <button class="common-btn w-100" type="submit">
                    Update password
                </button>
            </div>
        </div>
    </div>
    </form>
    <!-- </div> -->

</section>
<!--------- Update Password area End --------->