<!--------- Registration area Start --------->
<section class="registration__area">
    <div class="container">
        <div class="registration__form" id="signup">
            <form action="/admin/login" method="post">
                <br>
                <h2>Login An Account</h2>

                <% if(successReg.length> 0){ %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= successReg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

                    </div>
                    <% } %>


                        <% if(typeof error !=="undefined" ){ %>
                            <%error.forEach(errors=>{%>

                                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                    <p>
                                        <%= errors.msg %>
                                    </p>

                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                                </div>

                                <% }) %>
                                    <% } %>
                                        <div class="row">




                                            <div class="col-sm-12">
                                                <div class="form__input">
                                                    <input type="email" class="form-control" placeholder="Email Address"
                                                        name="email" />
                                                </div>
                                            </div>






                                            <div class="col-sm-12">
                                                <div class="form__input">
                                                    <input type="password" class="form-control" placeholder="password"
                                                        name="password" />
                                                </div>
                                            </div>

                                        </div>

                                        <div class="col-12">
                                            <div class="form__submit pt-1">
                                                <button class="common-btn w-100" type="submit">
                                                    Login
                                                </button>
                                            </div>
                                        </div>
            </form>
            <div class="already">
                <p>not yet an Admin? <a href="/admin/register">Register</a></p>
                <a href="/admin/forget-password">forget password</a>
            </div>
        </div>
    </div>
    <!-- </div> -->

</section>
<!--------- Registration area End --------->